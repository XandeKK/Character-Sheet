<div class="container mx-auto flex justify-center mt-32">

  <div class="p-4 w-full max-w-sm bg-white border border-gray-200 shadow-md sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700 rounded-lg md:p-8 dark:bg-gray-800 dark:border-gray-700 text-gray-900 dark:text-white">
    <h2 class="mb-6 text-xl font-medium"><%= t(".title") %></h2>

    <%= form_for @user, class: "text-sm" do |form| %>
      <%= render partial: '/users/form', object: form %>

      <%= form.submit class: "w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 mb-6" %>

      <div class="text-sm font-medium text-gray-500 dark:text-gray-300">
        <%= link_to t(".sign_in"), sign_in_path, class: "text-blue-700 hover:underline dark:text-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
