<div id="clearance" class="sign-up">
  <h2><%= t(".title") %></h2>

  <%= form_with model: @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="text-end">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <div class="text-center mt-5">
      <%= link_to t(".sign_in"), sign_in_path %>
    </div>
  <% end %>
</div>
