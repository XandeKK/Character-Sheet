<button id="dropdownNavbarLink" data-dropdown-toggle="dropdownNavbar" class="flex justify-between items-center py-2 pr-4 pl-3 w-auto font-medium text-white  hover:bg-rose-800 md:hover:bg-transparent md:border-0 md:hover:text-white md:p-0 md:w-auto dark:hover:bg-rose-800 md:dark:hover:bg-transparent rounded">
  <%= @character.pathfinder_basic.name %>
  <svg class="ml-1 w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
  </svg>
</button>
<!-- Dropdown menu -->
<div id="dropdownNavbar" class="hidden z-10 w-96 font-normal bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
  <ul class="p-3 space-y-1 text-sm" aria-labelledby="dropdownRadioBgHoverButton">
    <% @characters_dropdown.each do |character| %>
    <li class="relative hover:bg-gray-100 dark:hover:bg-gray-600 p-2">
      <%= link_to "", character_path(character), class: "flex items-center p-2 rounded absolute h-full w-full", data: {turbo: false}%>
        <input <%= "checked" if character == @character %> id="radio-<%= character.id %>" type="radio" name="radio" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
        <label for="radio-<%= character.id %>" class="ml-2 w-full text-sm font-medium text-gray-900 rounded dark:text-gray-300"><%= character.pathfinder_basic.name %></label>
    </li>
    <% end %>
  </ul>
  <div class="py-1">
    <%= link_to "Edit Character", edit_character_path(@character), class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-400 dark:hover:text-white", data: {turbo: false} %>
    <%= link_to "New Character", new_character_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-400 dark:hover:text-white", data: {turbo: false} %>
  </div>
</div>