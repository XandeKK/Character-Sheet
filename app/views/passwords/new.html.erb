<div class="container mx-auto flex justify-center mt-32">
  <div class="p-4 w-full max-w-sm bg-white border border-gray-200 shadow-md sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700 rounded-lg md:p-8 dark:bg-gray-800 dark:border-gray-700">
    <h2 class="mb-6 text-xl font-medium text-gray-900 dark:text-white"><%= t(".title") %></h2>
    <p class="mb-6 text-gray-900 dark:text-white"><%= t(".description") %></p>
    <%= form_for :password, url: passwords_path do |form| %>
      <div class="relative z-0 mb-6 w-full group">
        <%= form.email_field :email, class: peer_field, placeholder:" ", required:"" %>
        <%= form.label :email, class: peer_label %>
      </div>
      <%= form.submit class: "w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 mb-6" %>
    <% end %>
  </div>
</div>
