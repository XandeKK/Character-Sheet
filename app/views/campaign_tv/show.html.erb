<%= stylesheet_link_tag "tv/dice-box" %>

<div id="form" class="position-absolute top-50 start-50 translate-middle text-bg-light p-3 rounded" style="z-index: 999;">
	<%= form_with url: sign_up_campaign_tv_path do |form| %>
		<div class="mb-3">
			<%= form.label :unique_name, "Server name", class:"form-label"%>
			<%= form.text_field :unique_name, class: "form-control" %>
		</div>

		<div class="mb-3">
			<%= form.label :password, "Password", class:"form-label" %>
			<%= form.password_field :password, class: "form-control" %>
		</div>
		<div class="text-end">
			<%= form.submit "Connect", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>

<div id="dice-box" class=""></div>
<div id="chat" class="bg-light w-100 overflow-auto px-4 py-2"></div>
	
<%= javascript_include_tag "channels/tv_channel", type: :module, crossorigin: "anonymous" %>