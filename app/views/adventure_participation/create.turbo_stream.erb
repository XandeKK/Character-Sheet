<%= turbo_stream.replace dom_id(@character, :button) do %>
	<%= turbo_frame_tag dom_id(@character, :button), class: "col text-center" do %>
		<%= button_to "Remove", destroy_adventure_participation_path(id: @adventure, adventure_participation_id: @character.adventure_participation_ids), method: :delete, class: "btn btn-primary btn-sm" %>
	<% end %>
<% end %>

<%= turbo_stream.append @character.character_category.name do %>
    <%= render partial: "adventures/character", locals: {character: @character} %>
<% end %>