<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas<%= character.id %>">
  <div class="offcanvas-header">
      <h3 class="offcanvas-title"></h3>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <%= render partial: "characters/display/basics", locals: { character_json: character_json, character: character } %>

    <%= render partial: "characters/display/statistics", locals: { character_json: character_json} %>

    <%= render partial: "characters/display/offense", locals: { character_json: character_json} %>

    <%= render partial: "characters/display/skills", locals: { character_json: character_json} %>

    <%= render partial: "characters/display/inventory", locals: { character_json: character_json} %>
  </div>
</div>