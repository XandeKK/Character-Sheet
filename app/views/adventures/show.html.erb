<h1><%= @adventure.name %></h1>

<%= form_with do |form| %>
	<%= form.label "Server's name:" %>
	<%= form.label @adventure.unique_name %><br>

	<%= form.label "Password", :password %>
	<%= form.text_field :password, value: @adventure.password %>

	<%= form.submit "Start Server" %>
<% end %>

<hr>
<h3>Npcs</h3>
<ul>
	<% @npcs.each do |npc| %>
		<li>
			<%= link_to npc.name, character_path(npc) %>
		</li>
	<% end%>
</ul>

