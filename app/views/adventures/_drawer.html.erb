<div id="drawer-adventure" class="fixed z-40 h-screen p-4 overflow-y-auto bg-white mm:w-80 md:w-96 dark:bg-gray-800 transition-transform right-0 top-0 translate-x-full" tabindex="-1" aria-labelledby="drawer-right-label" aria-hidden="true" data-adventure--drawer-target="drawer">
  <h5 class="inline-flex items-center mb-4 text-base font-semibold text-gray-500 dark:text-gray-400" data-adventure--drawer-target="drawer_character_title"></h5>
  <div class="hidden" data-adventure--drawer-target="dice_div" data-controller="edit-character--theme-dice">
    <div class="mb-3">
      <label for="color" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Color Dice</label>
      <input type="color" id="color" class="block w-full bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" data-channels--adventure-target="inputColor" data-adventure--drawer-target="inputColor" data-edit-character--theme-dice-target="inputColor" data-edit-character--theme-dice-character-id-param="" data-action="edit-character--theme-dice#saveThemeLocalStorage">
    </div>
    <div class="mb-3">
      <label for="theme-dice" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Dice theme</label>
      <select id="theme-dice" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" data-channels--adventure-target="inputTheme" data-edit-character--theme-dice-target="inputTheme" data-adventure--drawer-target="inputTheme" data-action="edit-character--theme-dice#saveThemeLocalStorage">
        <option value="default">default</option>
        <option value="blueGreenMetal">blueGreenMetal</option>
        <option value="diceOfRolling">diceOfRolling</option>
        <option value="rock">rock</option>
        <option value="rust">rust</option>
        <option value="smooth">smooth</option>
        <option value="wooden">wooden</option>
      </select>
    </div>
    <div class="flex flex-wrap items-center mb-6">
      <% ["4", "6", "8", "10", "12", "20", "100"].each do |dice| %>
        <button type="button" class="flex-1 py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
        data-channels--adventure-dice-param="1d<%= dice %>"
        data-action="channels--adventure#diceNormal">1d<%= dice %></button>
      <% end %>
    </div>
    <div data-adventure--drawer-target="weaponDice" class="hidden">
      <div class="flex flex-wrap items-center">
        <% ["attack", "secondAttack", "thirdAttack"].each do |attack| %>
          <button type="button" class="flex-1 py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
        data-adventure--drawer-target="<%= attack %>"
        data-action="channels--adventure#diceAttack"
        data-channels--adventure-attack-param="<%= attack %>"
        >0</button>
        <% end %>
      </div>
      <div class="flex flex-wrap items-center">
        <button type="button" class="flex-1 py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
        data-action="channels--adventure#diceDamage">Damage</button>
        <button type="button" class="flex-1 py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" data-action="channels--adventure#diceCritical">Critical</button>
      </div>
    </div>
    <button type="button" class="hidden w-full flex-1 py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
      data-adventure--drawer-target="macro"
      data-channels--adventure-dice-param=""
      data-action="channels--adventure#diceNormal"></button>
  </div>
  <p class="mb-6 text-sm text-gray-500 dark:text-gray-400 whitespace-pre-line" data-adventure--drawer-target="drawer_character_note"></p>
</div>
