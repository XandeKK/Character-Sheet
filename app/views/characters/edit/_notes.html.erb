<div id="notes" class="<%= box_body %>">
  <div class="<%= box_header %>">
    <svg class="<%= box_header_svg %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path fill="none" d="M0 0h24v24H0z"/><path d="M21 9v11.993A1 1 0 0 1 20.007 22H3.993A.993.993 0 0 1 3 21.008V2.992C3 2.455 3.447 2 3.998 2H14v6a1 1 0 0 0 1 1h6zm0-2h-5V2.003L21 7zM8 7v2h3V7H8zm0 4v2h8v-2H8zm0 4v2h8v-2H8z"/></svg>
    <h1 class="<%= box_header_text %>">
      Notes
    </h1>
  </div>
  <!--  -->
    <div class="<%= box_tabs_body %>">
    <ul class="<%= box_tabs %>" id="notesTab" data-tabs-toggle="#notesTabContent" role="tablist">
      <% ["note"].each_with_index do |target, index| %>
        <li class="mr-2" role="presentation">
          <button class="<%= box_tab_button %>" id="<%= target %>-tab" data-tabs-target="#<%= target %>" type="button" role="tab" aria-controls="<%= target %>" aria-selected="<%= index == '0' ? 'true' : 'false' %>"><%= target.capitalize %></button>
        </li>
      <% end %>
    </ul>
  </div>
  <!--  -->
  <div id="spellsTabContent">
    <div id="note" role="tabpanel" aria-labelledby="note-tab">
      <div class="flex flex-col md:flex-row mm:p-6 mm:space-x-3">
        <div class="flex-none font-bold text-lg text-black w-40 dark:text-white">
          Notes
        </div>
        <div id="body-notes" class="w-full space-y-6">
          <div class="w-full flex flex-row-reverse">
            <div class="<%= add_item %>" data-action="click->edit-character--item#add" data-edit-character--item-count-param="<%= @character.pathfinder_notes.count %>"
            data-edit-character--item-name-param="notes">
              +
            </div>
          </div>
          <%= form.fields_for :pathfinder_notes do |form_notes| %>
          <div id="notes-<%= form_notes.index %>">
            <div class="flex">
              <div class="flex-1">
                <%= form_notes.label :name, class: normal_label %>
                <%= form_notes.text_field :name, class: "#{rounded_left} #{normal_field} #{write_only}" %>
              </div>
              <div class="flex-1">
                <div class="<%= normal_label %> opacity-0">0</div>
                <div class="<%= delete_item %>" data-action="click->edit-character--item#remove" data-edit-character--item-id-param="<%= form_notes.index %>"
                data-edit-character--item-name-param="notes">
                  -
                </div>
              </div>
            </div>
            <div>
              <%= form_notes.label :note, class: normal_label %>
              <%= form_notes.text_area :note, class: "#{normal_field} #{write_only}" %>
            </div>
            <%= form_notes.check_box :_destroy, class: "hidden" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>