        <div class="flex-none font-bold text-lg text-black w-40 dark:text-white">
          Spell Caster
        </div>
        <div class="grid mm:grid-cols-2 md:grid-cols-3 gap-4 w-full">
          <div>
            <%= form_spell_caster.label :magic_tradition, class: normal_label %>
            <%= form_spell_caster.select :magic_tradition, magic_tradition, {}, class: "#{normal_field} #{normal_select}" %>
          </div>
          <div>
            <%= form_spell_caster.label :spellcasting_type, class: normal_label %>
            <%= form_spell_caster.select :spellcasting_type, spellcasting_type, {}, class: "#{normal_field} #{normal_select}" %>
          </div>
        </div>
      </div>
      <!--  -->
      <div class="flex flex-col md:flex-row mm:p-6 mm:space-x-3">
        <div class="flex-none font-bold text-lg text-black w-40 dark:text-white">
          Attack
        </div>
        <div class="w-full">
          <div class="flex">
            <div class="flex-1">
              <%= form_spell_caster.label :attack_proficiency, "Proficiency", class: normal_label %>
              <%= form_spell_caster.select :attack_proficiency, proficiencies, {}, class: "#{rounded_left} #{normal_field} #{normal_select}" %>
