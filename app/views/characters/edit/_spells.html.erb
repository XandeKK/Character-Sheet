                <%= form_spells.label :duration, class: normal_label %>
                <%= form_spells.text_field :duration, class: "#{rounded_left} #{normal_field} #{write_only}" %>
              </div>
              <div class="flex-1">
                <%= form_spells.label :range, class: normal_label %>
