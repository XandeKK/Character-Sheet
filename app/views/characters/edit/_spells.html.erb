<div id="spells" class="<%= box_body %>">
  <div class="<%= box_header %>">
    <svg class="<%= box_header_svg %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
      <path fill="none" d="M0 0h24v24H0z" />
      <path d="M12 23a7.5 7.5 0 0 1-5.138-12.963C8.204 8.774 11.5 6.5 11 1.5c6 4 9 8 3 14 1 0 2.5 0 5-2.47.27.773.5 1.604.5 2.47A7.5 7.5 0 0 1 12 23z" /></svg>
    <h1 class="<%= box_header_text %>">
      Spells
    </h1>
  </div>
  <!--  -->
  <div class="<%= box_tabs_body %>">
    <ul class="<%= box_tabs %>" id="spellsTab" data-tabs-toggle="#spellsTabContent" role="tablist">
      <% ["spell-caster", "spell", "innate-spells", "focus-spells"].each_with_index do |target, index| %>
        <li class="mr-2" role="presentation">
          <button class="<%= box_tab_button %>" id="<%= target %>-tab" data-tabs-target="#<%= target %>" type="button" role="tab" aria-controls="<%= target %>" aria-selected="<%= index == '0' ? 'true' : 'false' %>"><%= target.capitalize.sub("-", " ") %></button>
        </li>
      <% end %>
    </ul>
  </div>
  <!--  -->
  <div id="spellsTabContent">
    <%= form.fields_for :pathfinder_spell_caster do |form_spell_caster| %>
