            <div class="flex-1">
              <%= form_spell_caster.label :attack_penalty, "Penalty", class: normal_label %>
              <%= form_spell_caster.number_field :attack_penalty, class: "#{rounded_right} #{normal_field} #{write_only}", value: 0 %>
            </div>
          </div>
        </div>
      </div>
      <!--  -->
