            </div>
          </div>
        </div>
      </div>
      <!--  -->
      <div class="flex flex-col md:flex-row mm:p-6 mm:space-x-3">
        <div class="flex-none font-bold text-lg text-black w-40 dark:text-white">
          Level
        </div>
        <div class="grid mm:grid-cols-3 md:grid-cols-5 gap-4 w-full">
          <div>
            <%= form_spell_caster.label :level_0, class: normal_label %>
            <%= form_spell_caster.number_field :level_0, class: "#{normal_field} #{write_only}", value: 0 %>
          </div>
          <div>
            <%= form_spell_caster.label :level_1, class: normal_label %>
