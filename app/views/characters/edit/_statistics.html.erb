    <div class="hidden" id="feats" role="tabpanel" aria-labelledby="feats-tab">
      <div class="flex flex-col md:flex-row mm:p-6 mm:space-x-3">
        <div class="flex-none font-bold text-lg text-black w-40 dark:text-white">
          Feats
        </div>
        <div id="body-feats" class="w-full space-y-6">
          <div class="w-full flex flex-row-reverse">
            <div class="<%= add_item %>" data-controller="edit-character--feats" data-action="click->edit-character--feats#addFeat" data-edit-character--feats-count-param="<%= @character.pathfinder_feats.count %>">
              +
            </div>
          </div>
          <%= form.fields_for :pathfinder_feats do |form_feats| %>
          <div id="feats-<%= form_feats.index %>">
            <div class="flex">
              <div class="flex-1">
                <%= form_feats.label :name, class: normal_label %>
                <%= form_feats.text_field :name, class: "#{rounded_left} #{normal_field} #{write_only}" %>
              </div>
              <div class="flex-1">
                <%= form_feats.label :types, class: normal_label %>
                <%= form_feats.select :types, types_feats, {}, class: "#{rounded_none} #{normal_field} #{normal_select}" %>
              </div>
              <div class="flex-1">
                <div class="block mb-2 font-medium opacity-0">0</div>
                <div class="<%= delete_item %>" data-controller="edit-character--feats" data-action="click->edit-character--feats#removeFeat" data-edit-character--feats-id-param="<%= form_feats.index %>">
                  -
                </div>
              </div>
            </div>
            <div>
              <%= form_feats.label :notes, class: normal_label %>
              <%= form_feats.text_area :notes, class: "#{normal_field} #{write_only}" %>
            </div>
            <%= form_feats.check_box :_destroy, class: "hidden" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
