<div class="flex flex-col md:flex-row mm:p-6 mm:space-x-3">
  <div class="flex-none font-bold text-lg text-black w-40 dark:text-white">
    <%= @title %>
  </div>
  <%= content_tag(:div, id: @main_id, class: "w-full space-y-6", data: @data) do %>
    <% if @add %>
      <div class="w-full flex flex-row-reverse">
        <%= content_tag(:div, "+", class: @add[:class_div], data: @add[:data]) %>
      </div>
    <% end %>
    <%= @form.fields_for @fields_for do |f| %>
      <%= render(Form::Box::ItemComponent.new(f: f, forms: @forms, item_id: @item_id))%>
    <% end %>
  <% end %>
</div>
